{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",        // TS5+, bo‘lmasa "Node" ham bo‘ladi
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "jsx": "preserve",
      "useDefineForClassFields": true,
      "strict": true,
      "skipLibCheck": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "types": ["vite/client"],             // import.meta.env tiplari
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "src/types/**/*.d.ts"]
  }
  