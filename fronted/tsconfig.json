{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler", // TS5+, bo‘lmasa "Node" ham bo‘ladi
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["vite/client"], // import.meta.env tiplari
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["fronted/src/*"]
    }
  },
  "include": ["fronted/src/**/*.ts", "fronted/src/**/*.vue", "fronted/src/types/**/*.d.ts"],
  "exclude": ["../backend/**"]
}
